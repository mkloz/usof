{
  "name": "usof",
  "version": "1.0.0",
  "description": "usof backend",
  "main": ".eslintrc.js",
  "scripts": {
    "prepare": "npx husky",
    "generate": "npx prisma generate",
    "build": "npx rimraf dist && npm run generate && npx tsc",
    "migrate": "npx prisma migrate deploy",
    "seed": "npx prisma db seed",
    "start": "node dist/src/index",
    "test": "npm run test:int && npm run test:e2e",
    "lint": "npx eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "npx prettier --write \"src/**/*.ts\"",
    "build:dev": "npx rimraf dist && npx tsc --watch",
    "start:dev": "node --watch dist/src/index",
    "start:debug": "npm run start --debug --watch",
    "migrate:dev": "npx prisma migrate dev",
    "test:e2e": "npx jest --passWithNoTests --config ./test/e2e/jest-e2e.json",
    "test:int": "npx jest --passWithNoTests --config ./test/integration/jest-int.json"
  },
  "author": "Mykhailo Kloz",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.662.0",
    "@aws-sdk/lib-storage": "^3.662.0",
    "@prisma/client": "^5.20.0",
    "@types/morgan": "^1.9.9",
    "bcryptjs": "^2.4.3",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "cron": "^3.1.7",
    "dotenv": "^16.4.1",
    "express": "^5.0.0",
    "handlebars": "^4.7.8",
    "http-status-codes": "^2.3.0",
    "husky": "^9.0.10",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node": "^20.18.0",
    "nodemailer": "^6.9.15",
    "rimraf": "^5.0.5",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "yamljs": "^0.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/cron": "^2.0.1",
    "@types/express": "5.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.12",
    "@types/nodemailer": "^6.4.16",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.8",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-autofix": "^1.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prisma": "^5.20.0",
    "prisma-class-generator": "^0.2.11",
    "prisma-dbml-generator": "^0.12.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "rootDir": ".",
    "testTimeout": 10000,
    "testEnvironment": "node",
    "testRegex": ".(e2e|int|unit)-spec.js$"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  }
}
